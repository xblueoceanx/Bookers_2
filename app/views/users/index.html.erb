<h1>Users</h1>

<% @users.each do |user| %>
 <h4>image</h4>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

  <h4>name</h4>
  <%= user.introduction %>

<p><%= link_to "Show", user_path(user) %></p>

<% end %>

<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>