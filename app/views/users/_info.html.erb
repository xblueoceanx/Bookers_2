<h2>User info</h2>
<div>
 <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
</div>

<table class="table" width="600" cellspacing="0" cellpadding="5">
<tr>
<th><font size=3px>name</font></th>
<th width="300"><font size=3px><%= user.name %></font></th>
</tr>
<tr>
<th><font size=3px>introduction</font></th>
<th width="300"><font size=3px><%= user.introduction %></font></th>
</tr>
<!-- フォロー -->
<tr>
    <th>follows</th>
    <th><%= link_to user.follower.count, user_follows_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followed.count, user_followers_path(user) %></th>
  </tr>
<!-- フォロー -->
</table>

<!-- フォローボタン -->
<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success" %>
  <% end %>
<% end %>
<!-- フォローボタン -->

<p>
  <%= link_to "", edit_user_path(user), class: "glyphicon glyphicon-wrench btn btn-default btn-block" %>
</p>
