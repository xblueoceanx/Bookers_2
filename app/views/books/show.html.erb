
<div class="container">
　<div class="row">
	<div class="col-xs-3">
      <%= render 'users/info', user: @book.user %>
      <%= render 'books/new', book: @book_new %>
    </div>
   <div class="col-xs-9"> 

<h1>Book detail</h1>

<table class="table" width="300" cellspacing="0" cellpadding="5" >
<tr>
<th width="200"><font></font></th>
<th width="100"><font></font></th>
<th width="100"><font></font></th>
<th width="50"><font></font></th>
<th width="50"><font></font></th>
</tr>

<tr>
<td align="left" width="200">
	<%= link_to user_path(@user) do %>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <br>
  <%= link_to @user.name, user_path(@user) %>
	<% end %>
</td>
<td align="left" width="100"><%= link_to @book.title, book_path(@book) %></td>
<td valign="top" width="100"><%= @book.body %></td>


<% if @book.user == current_user %>
    <td valign="top" width="50"><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
    <td valign="top" width="50"><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
</tr>

<% end %>

</table>


<!-- コメント機能 -->

<li>
  <i class="fa fa-comment"></i>
  <a href="#comments"><%= @book.book_comments.count %></a>
</li>

<div class="comment-list bt style-2" id="comments">
  <div class="float-wrapper">
    <h2 class="comment-count"><%= @book.book_comments.count %>件コメント</h2>
  </div>

  <ol>
  <% @book.book_comments.each do |book_comment| %>
    <li class="comment">
      <div class="comment-body bb">
        <div class="comment-avatar">
          <div class="avatar">
            <%= image_tag('sample-author1.jpg', style: "width: 60px; height: 60px;") %>
          </div>
        </div>
        <div class="comment-text">
          <div class="comment-author clearfix">
            <a href="#" class="link-author"><%= book_comment.user.name %></a>
            <span class="comment-meta">
              <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
            </span>
          </div>
          <div class="comment-entry"><%= book_comment.comment %></div>
          <% if book_comment.user == current_user %>
            <div>
              <%= link_to "削除", book_book_comments_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
            </div>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ol>

<!-- <form class="mt-20"> -->
<%= form_for [@book, @book_comment] do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    </div>
  </div>
  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>
<!-- </form> -->

<!-- コメント機能 -->

</div> 
 　</div>
 </div>


