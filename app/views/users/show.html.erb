

<div class="container">
　<div class="row">
	<div class="col-xs-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
   <div class="col-xs-9"> 

<h2>Books</h2>

<table class="table" width="600" cellspacing="0" cellpadding="5" >

<tr>
<th width="200"><font></font></th>
<th width="200"><font>Title</font></th>
<th width="400"><font>Opinion</font></th>
</tr>

<% @books.each do |book| %>

<tr>
<td align="left" width="200">
	<%= link_to user_path(book.user) do %>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
	<% end %>
</td>
<td align="left" width="200"><%= link_to book.title, book_path(book) %></td>
<td valign="top" width="400"><%= book.body %></td>
</tr>

<% end %>

</table>

<p><%= "フォロー数: #{@user.follower.count}" %></p>
<p><%= "フォロワー数: #{@user.followed.count}" %></p>
<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST %>
  <% else %>
    <%= link_to 'フォローする', follow_path(@user.id), method: :POST %>
  <% end %>
<% end %>

</div> 
 　</div>
 </div>


