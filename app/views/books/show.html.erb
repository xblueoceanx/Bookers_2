<% if flash[:notice] %>
  <p><font><%= flash[:notice] %></font></p>
<% end %>

<h1>Book detail</h1>

<p>
<strong>Title</strong>
<%= @book.title %>
</p>
<p>
<strong>Opinion</strong>
<%= @book.body %></p>
<% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "削除", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>

<%= render 'users/info', user: @book.user %>
<%= render 'books/new', book: @book_new %>
