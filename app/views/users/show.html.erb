<% if flash[:notice] %>
  <p><font><%= flash[:notice] %></font></p>
<% end %>


<h2>Books</h2>

<% @books.each do |book| %>

  <h4>Title</h4>
    <%= link_to book.title, book_path(book) %>

  <h4>Opinion</h4>
    <%= book.body %>
    
<% end %>

<%= render 'users/info', user: @user %>
<%= render 'books/new', book: @book %>